{
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "Math": true,
    "Float32Array": true,
    "Nenkraft": true,
    "nk":true
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-debugger": [
      "error"
    ],
    "no-extra-semi": [
      "error"
    ],
    "no-sparse-arrays": [
      "error"
    ],
    "no-unreachable": [
      "error"
    ],
    "default-case": [
      "error"
    ],
    "no-else-return": [
      "error"
    ],
    "no-loop-func": [
      "error"
    ],
    "no-redeclare": [
      "error"
    ],
    "no-undef": [
      "error"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "space-in-parens": [
      "error",
      "always"
    ],
    "no-multi-spaces": [
      "error"
    ],
    "no-unused-vars": [
      "error"
    ],
    "func-call-spacing": [
      "error",
      "never"
    ],
    "no-unneeded-ternary": [
      "error"
    ],
    "padded-blocks": [
      "error",
      "always"
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "block-like",
        "next": "*"
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      { 
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ]
  }
}